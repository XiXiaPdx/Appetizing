<?xml version="1.0" encoding="utf-8"?>
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/colorPrimary"
        android:layout_width="300dp"
        android:layout_height="220dp">

        <TextView
            android:id="@+id/restaurantName"
            android:layout_width="282dp"
            android:layout_height="34dp"
            android:layout_marginLeft="-12dp"
            android:text="TextView"
            android:textColor="@color/colorAccent"
            android:textSize="24sp"
            card_view:layout_constraintLeft_toLeftOf="@+id/restaurantImage"
            android:layout_marginBottom="8dp"
            card_view:layout_constraintBottom_toTopOf="@+id/streetAddress"
            card_view:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" />

    <ImageView
        android:id="@+id/restaurantImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        card_view:srcCompat="@mipmap/ic_launcher_round"
        tools:layout_editor_absoluteX="16dp"
        card_view:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="51dp" />

    <TextView
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/colorLightBlue"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        card_view:layout_constraintTop_toBottomOf="@+id/restaurantImage"
        card_view:layout_constraintLeft_toRightOf="@+id/ratingIcon"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/streetAddress"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/colorLightBlue"
        android:textSize="18sp"
        android:layout_marginRight="-29dp"
        card_view:layout_constraintRight_toRightOf="parent"
        card_view:layout_constraintLeft_toRightOf="@+id/restaurantImage"
        android:layout_marginLeft="8dp"
        card_view:layout_constraintHorizontal_bias="0.0"
        card_view:layout_constraintTop_toTopOf="@+id/restaurantImage"
        android:layout_marginTop="0dp"
        tools:layout_editor_absoluteX="122dp" />

    <ImageView
        android:id="@+id/ratingIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@android:color/transparent"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        card_view:layout_constraintLeft_toLeftOf="@+id/restaurantImage"
        card_view:layout_constraintTop_toBottomOf="@+id/restaurantImage"
        card_view:srcCompat="@drawable/search_circle" />

    <TextView
        android:id="@+id/cityState"
        android:layout_width="177dp"
        android:layout_height="20dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="@color/colorLightBlue"
        android:textSize="18sp"
        card_view:layout_constraintLeft_toLeftOf="@+id/streetAddress"
        card_view:layout_constraintRight_toRightOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/streetAddress"
        card_view:layout_constraintHorizontal_bias="0.0" />

</android.support.constraint.ConstraintLayout>
